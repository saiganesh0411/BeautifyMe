@page
@model BeautifyMe.Areas.OTP.Pages.OTPModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Order Verification";
    Layout = "/Views/Shared/_Layout.cshtml";
}
@{
    <div class="row">
        <div class="col-md-12">
            <form id="validationForm" method="post">
                <div class="row emptyDiv"></div>
                <h4>Confirm your order by entering the verification code sent to your registed email.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.OTP" class="form-control" autocomplete="OTP" aria-required="true" />
                    <label asp-for="Input.OTP"></label>
                    <span asp-validation-for="Input.OTP" class="text-danger"></span>
                </div>
                <input asp-for="Input.OrderId" type="hidden" />
                <button id="validateOTP" type="submit" class="w-100 btn btn-lg btn-primary">Validate OTP</button>
            </form>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}