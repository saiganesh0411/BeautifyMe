@page
@model BeautifyMe.Areas.Address.Pages.AddressModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Address";
    Layout = "/Views/Shared/_Layout.cshtml";

}

<div class="row">
    <div class="col-md-4 mx-auto">
        <form id="registerForm" method="post" class="text-center">
            <h2>Address Details.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="row emptyDiv"></div>

            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="row emptyDiv"></div>

            <div class="form-floating">
                <input asp-for="Input.AddressLine1" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.AddressLine1"></label>
                <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
            </div>
            <div class="row emptyDiv"></div>

            <div class="form-floating">
                <input asp-for="Input.AddressLine2" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.AddressLine2"></label>
                <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
            </div>
            <div class="row emptyDiv"></div>

            <div class="form-floating">
                <input asp-for="Input.State" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.State"></label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="row emptyDiv"></div>
    
            <div class="form-floating">
                <input asp-for="Input.Zipcode" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Zipcode"></label>
                <span asp-validation-for="Input.Zipcode" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add address</button>
        </form>
    </div>
</div>